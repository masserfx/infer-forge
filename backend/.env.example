# INFER FORGE Backend Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=INFER FORGE
DEBUG=false

# Database (PostgreSQL 16 with pgvector)
DATABASE_URL=postgresql+asyncpg://infer:infer_password@localhost:5432/infer_forge

# Redis (for Celery and caching)
REDIS_URL=redis://localhost:6379/0

# Security (IMPORTANT: Generate random SECRET_KEY for production!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-...

# Email - IMAP (for receiving emails)
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=email@example.com
IMAP_PASSWORD=your_imap_password
IMAP_USE_SSL=true

# Email - SMTP (for sending emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=email@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=email@example.com

# Pohoda Integration
POHODA_ICO=04856562
POHODA_MSERVER_URL=http://localhost:8001/xml
POHODA_XML_VERSION=2.0
POHODA_APPLICATION=INFER_FORGE

# Document Encryption (AES-256-GCM for at-rest encryption)
# Generate with: uv run python -c "from app.core.encryption import generate_encryption_key; print(generate_encryption_key())"
# Leave empty to disable encryption (dev/test only)
DOCUMENT_ENCRYPTION_KEY=

# Sentry (optional - for error tracking)
SENTRY_DSN=
